<html class="{{#if isDarkMode}}dark{{/if}}" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script defer src="/js/client-constants.js"></script>
    <script defer src="/js/client-utils.js"></script>
    <script defer src="/js/client-main.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <link href="/styles/styles.css" rel="stylesheet" />
    <title>{{title}}</title>
  </head>
  <body class="layout">
    {{> header}}

    <div class="content">
      <div class="container">
        {{{body}}}
      </div>
    </div>

    {{#if user}}
      {{> logoutModal}}
    {{/if}}

    {{> footer}}
  </body>
</html>